<div class="form-title">
    <h1>Income Tax Certificate (01.01 - 31.12)</h1>
</div>
<form id="employmentForm">
    <div class="form-section">
        <h2>Employment Information</h2>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="employer">
                    Employer *
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Employer (e.g. Company, Institution, Service)"></i>
                </label>
                <input type="text" id="employer" name="employer" class="form-control" required>
            </div>
            <div class="form-group col-md-6">
                <label for="tax-id-number">Tax ID Number</label>
                <input type="text" id="tax-id-number" name="tax-id-number" class="form-control">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="tax-class">Tax Class</label>
                <select id="tax-class" name="tax-class" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="occupation-group">Occupation Group</label>
                <select id="occupation-group" name="occupation-group" class="form-control">
                    <option value="employee-trainee">Employee, Trainee</option>
                    <option value="civil-servant">Civil Servant, Judge, Soldier, Clergyman, DO Employee</option>
                    <option value="intern-student">Intern, Pupil/Student in Internship</option>
                    <option value="retiree">Pensioner, Company Pensioner</option>
                    <option value="pensioner">Pensioner</option>
                    <option value="former-soldier">Former Soldier with Transition Allowance</option>
                    <option value="mini-jobber">Mini Jobber (not taxed flat rate)</option>
                    <option value="short-term-worker">Short-term Worker</option>
                    <option value="working-student">Working Student (only pension insurance)</option>
                    <option value="gmbh-ceo">GmbH Shareholder-CEO</option>
                    <option value="board-member">Board Member of a Stock Corporation</option>
                </select>
            </div>            
        </div>
    </div>

    <div class="form-section">
        <h2>Lines of the Employment Certificate</h2>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="certificate-period">Certificate Period *</label>
                <input type="text" id="certificate-period" name="certificate-period" class="form-control" value="01.01 - 31.12" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="number-u">Number U</label>
                <input type="number" id="number-u" name="number-u" class="form-control">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>Capital Letters</label>
                <div class="capital-letters-group">
                    <div class="capital-letter-item">
                        <input type="checkbox" id="capital-letters-s" name="capital-letters" value="S">
                        <label for="capital-letters-s">S</label>
                    </div>
                    <div class="capital-letter-item">
                        <input type="checkbox" id="capital-letters-m" name="capital-letters" value="M">
                        <label for="capital-letters-m">M</label>
                    </div>
                    <div class="capital-letter-item">
                        <input type="checkbox" id="capital-letters-f" name="capital-letters" value="F">
                        <label for="capital-letters-f">F</label>
                    </div>
                    <div class="capital-letter-item">
                        <input type="checkbox" id="capital-letters-fr" name="capital-letters" value="FR">
                        <label for="capital-letters-fr">FR</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="gross-wages">Gross Wages</label>
                <input type="text" id="gross-wages" name="gross-wages" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="uniform-wage-tax">Uniform Wage Tax</label>
                <input type="text" id="uniform-wage-tax" name="uniform-wage-tax" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="solidarity-surcharge">Solidarity Surcharge</label>
                <input type="text" id="solidarity-surcharge" name="solidarity-surcharge" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="church-tax-employer">Church Tax (Employer)</label>
                <input type="text" id="church-tax-employer" name="church-tax-employer" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="church-tax-spouse">Church Tax (Spouse)</label>
                <input type="text" id="church-tax-spouse" name="church-tax-spouse" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="pension-benefits">Pension Benefits</label>
                <input type="text" id="pension-benefits" name="pension-benefits" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>
                    Show Lines 9 to 14?
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Show Lines 9 to 14 of the Employment Certificate?"></i>
                </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="show-lines-yes" name="show-lines" value="yes">
                    <label class="form-check-label" for="show-lines-yes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="show-lines-no" name="show-lines" value="no" checked>
                    <label class="form-check-label" for="show-lines-no">No</label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="maternity-benefits">
                    Maternity Benefits
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Maternity Benefits, Allowances, etc."></i>
                </label>
                <input type="text" id="maternity-benefits" name="maternity-benefits" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>
                    Show Lines 16 to 21?
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Show Lines 16 to 21 of the Employment Certificate?"></i>
                </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="show-lines-16-yes" name="show-lines-16" value="yes">
                    <label class="form-check-label" for="show-lines-16-yes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="show-lines-16-no" name="show-lines-16" value="no" checked>
                    <label class="form-check-label" for="show-lines-16-no">No</label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="employer-contribution">
                    Employer Contribution
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Employer Contribution / Subsidy"></i>
                </label>
                <input type="text" id="employer-contribution" name="employer-contribution" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="statutory-pension-insurance">
                    Statutory Pension
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="To statutory pension insurance"></i>
                </label>
                <input type="text" id="statutory-pension-insurance" name="statutory-pension-insurance" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="occupational-pension-schemes">
                    Occupational Pension
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="To occupational pension schemes"></i>
                </label>
                <input type="text" id="occupational-pension-schemes" name="occupational-pension-schemes" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="employment-contribution">
                    Employment Contribution
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Employment Contribution"></i>
                </label>
                <input type="text" id="employment-contribution" name="employment-contribution" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="statutory-pension-insurance-employment">
                    Statutory Pension (Employment)
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="To statutory pension insurance (Employment)"></i>
                </label>
                <input type="text" id="statutory-pension-insurance-employment" name="statutory-pension-insurance-employment" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="occupational-pension-schemes-employment">
                    Occupational Pension (Employment)
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="To occupational pension schemes (Employment)"></i>
                </label>
                <input type="text" id="occupational-pension-schemes-employment" name="occupational-pension-schemes-employment" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="health-insurance">
                    Health Insurance
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="To statutory health insurance"></i>
                </label>
                <input type="text" id="health-insurance" name="health-insurance" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="tax-free-employer-benefits-1">
                    Employer Benefits (a)
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Tax-Free Employer Benefits (a) to statutory health insurance"></i>
                </label>
                <input type="text" id="tax-free-employer-benefits-1" name="tax-free-employer-benefits-1" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="tax-free-employer-benefits-2">
                    Employer Benefits (b)
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Tax-Free Employer Benefits (b) to private health insurance"></i>
                </label>
                <input type="text" id="tax-free-employer-benefits-2" name="tax-free-employer-benefits-2" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="tax-free-employer-benefits-3">
                    Employer Benefits (c)
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Tax-Free Employer Benefits (c) to statutory long-term care insurance"></i>
                </label>
                <input type="text" id="tax-free-employer-benefits-3" name="tax-free-employer-benefits-3" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="employee-contributions-1">
                    Employee Contributions 1
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Employee Contributions to statutory health insurance"></i>
                </label>
                <input type="text" id="employee-contributions-1" name="employee-contributions-1" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="employee-contributions-2">
                    Employee Contributions 2
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Employee Contributions to social long-term care insurance"></i>
                </label>
                <input type="text" id="employee-contributions-2" name="employee-contributions-2" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="employee-contributions-3">
                    Employee Contributions 3
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Employee Contributions to statutory pension insurance"></i>
                </label>
                <input type="text" id="employee-contributions-3" name="employee-contributions-3" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="private-insurance-contributions">
                    Private Insurance Contributions
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Contributions to private health and long-term care insurance above the minimum care allowance"></i>
                </label>
                <input type="text" id="private-insurance-contributions" name="private-insurance-contributions" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label for="paid-child-benefit">
                    Paid Child Benefit
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Paid Child Benefit"></i>
                </label>
                <input type="text" id="paid-child-benefit" name="paid-child-benefit" class="form-control" value="0.00 €">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="dba-turkey-allowance">
                    DBA Turkey Allowance
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="DBA Turkey Allowance"></i>
                </label>
                <input type="text" id="dba-turkey-allowance" name="dba-turkey-allowance" class="form-control" value="0.00 €">
            </div>
            <div class="form-group col-md-6">
                <label>
                    Amounts after Line 34?
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Are there amounts after line 34 on the income tax certificate?"></i>
                </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="amounts-after-line-34-yes" name="amounts-after-line-34" value="yes">
                    <label class="form-check-label" for="amounts-after-line-34-yes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="amounts-after-line-34-no" name="amounts-after-line-34" value="no" checked>
                    <label class="form-check-label" for="amounts-after-line-34-no">No</label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <h2>Taxation of Company Cars</h2>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>
                    Private Trips Taxed?
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Should private trips with the company car be taxed differently than by the employer?"></i>
                </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="private-trips-taxed-yes" name="private-trips-taxed" value="yes">
                    <label class="form-check-label" for="private-trips-taxed-yes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="private-trips-taxed-no" name="private-trips-taxed" value="no" checked>
                    <label class="form-check-label" for="private-trips-taxed-no">No</label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="private-trip-expenses">
                    Private Trip Expenses
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="User fee / self-borne costs for private trips with the company car"></i>
                </label>
                <input type="text" id="private-trip-expenses" name="private-trip-expenses" class="form-control" value="0.00 €">
            </div>
        </div>
    </div>

    <div class="form-section">
        <h2>Corrections</h2>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>
                    Gross Wage Corrected?
                    <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Should the gross wage be corrected in the income tax certificate?"></i>
                </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="gross-wage-corrected-yes" name="gross-wage-corrected" value="yes">
                    <label class="form-check-label" for="gross-wage-corrected-yes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="gross-wage-corrected-no" name="gross-wage-corrected" value="no" checked>
                    <label class="form-check-label" for="gross-wage-corrected-no">No</label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit Employment Information" class="btn btn-primary">
        <input type="button" value="Cancel" id="cancel-employment-info" class="btn btn-secondary">
        <input type="reset" value="Clear" class="btn btn-warning">
    </div>
</form>

<script>
    $(document).ready(function() {
        $('#employmentForm').submit(function(event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: '/submit-employment',
                data: $(this).serialize(),
                success: function(response) {
                    alert('Employment form submitted successfully!');
                },
                error: function(error) {
                    alert('Error submitting employment form');
                }
            });
        });

        $('#cancel-employment-info').click(function() {
            $('#dynamic-content').addClass('hidden');
            $('#mainContainer').show();
        });

        $('[data-toggle="tooltip"]').tooltip();
    });
</script>