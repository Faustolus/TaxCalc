<div class="child-form">
    <div class="form-title">
        <h2>First Child</h2>
        <p>Please provide the details below.</p>
    </div>
    <div class="form-section">
        <h3>Personal Information</h3>
        <div class="form-group">
            <label for="child-first-name">First Name *</label>
            <input type="text" class="child-first-name" name="child-first-name" required>
        </div>
        <div class="form-group">
            <label for="child-last-name">Last Name *</label>
            <input type="text" class="child-last-name" name="child-last-name" required>
        </div>
        <div class="form-group">
            <label for="child-birthdate">Birthdate *</label>
            <input type="date" class="child-birthdate" name="child-birthdate" required>
        </div>
        <div class="form-group">
            <label for="child-tax-id">Tax Identification Number *</label>
            <input type="text" class="child-tax-id" name="child-tax-id" required>
        </div>
        <div class="form-group">
            <label for="child-family-office">Responsible Family Office *</label>
            <input type="text" class="child-family-office" name="child-family-office" required>
        </div>
    </div>
    <button type="button" class="remove-child">Remove</button>
    <hr>
</div>
